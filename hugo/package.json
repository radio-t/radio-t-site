{
  "description": "Сайт подкаста Радио-Т",
  "scripts": {
    "build": "mix build --production",
    "build:analyze": "cross-env ANALYZE=true run-p build size-limit",
    "hugo": "cross-env-shell hugo serve --minify --port ${HUGO_PORT:-1313}",
    "hugo:no-live": "cross-env-shell hugo serve --minify --disableLiveReload --port ${HUGO_PORT:-1313}",
    "dev": "cross-env NODE_ENV=development run-p dev:watch hugo",
    "dev:watch": "mix watch",
    "dev:turbo": "cross-env NODE_ENV=development cross-env MIX_TURBO=1 run-p dev:watch hugo:no-live",
    "serve": "run-s build hugo",
    "size": "npm run build && size-limit",
    "prod": "npm run build",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,scss}' --write",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@sentry/browser": "^9.3.0",
    "axios": "^1.8.1",
    "axios-extensions": "^3.1.3",
    "bootstrap": "^4.6.2",
    "buffer": "^6.0.3",
    "core-js": "^3.41.0",
    "cross-env": "^7.0.3",
    "custom-event-polyfill": "^1.0.7",
    "date-fns": "^4.1.0",
    "imagesloaded": "^5.0.0",
    "intersection-observer": "^0.12.2",
    "laravel-mix": "^6.0.49",
    "light-event-bus": "^1.0.1",
    "lozad": "^1.9.0",
    "mark.js": "^8.11.1",
    "preact": "^10.26.4",
    "purgecss-from-html": "^7.0.2",
    "purgecss-webpack-plugin": "^7.0.2",
    "quicklink": "^2.3.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "scriptjs": "^2.5.9",
    "smooth-scroll": "^16.1.0",
    "smoothscroll-polyfill": "^0.4.4",
    "stimulus": "^3.2.2",
    "ts-loader": "^9.5.2",
    "turbolinks": "^5.2.0",
    "typescript": "^5.8.2",
    "visibilityjs": "^2.0.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "@size-limit/file": "^4.10.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "browser-sync": "^3.0.3",
    "browser-sync-webpack-plugin": "github:Va1/browser-sync-webpack-plugin",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "npm-run-all": "^4.1.5",
    "size-limit": "^4.10.1"
  }
}
